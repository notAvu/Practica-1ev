<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:columnCount="3">
    <ImageView
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_row="0"
        android:id="@+id/logo"
        android:layout_margin="5dp"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@color/black"/>
    <TextView
        android:layout_columnWeight="50"
        android:layout_column="1"
        android:layout_row="0"
        android:id="@+id/nombre_tv"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:text="Nombre de empresa SL"/>

    <TextView
        android:layout_columnWeight="50"
        android:layout_row="0"
        android:layout_column="2"
        android:paddingVertical="5dp"
        android:id="@+id/link_tv"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="5dp"
        android:text="https_pagina_de_ejemplo_456"/>

    <TextView
        android:layout_columnWeight="50"
        android:layout_column="2"
        android:layout_row="1"
        android:paddingVertical="5dp"
        android:id="@+id/mail_tv"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="5dp"
        android:text="Mail@dominioEjemplo.com"
        />
    <TextView
        android:layout_columnWeight="50"
        android:layout_column="1"
        android:layout_row="1"
        android:paddingVertical="5dp"
        android:id="@+id/location_tv"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="5dp"
        android:text="CRTA Localizacion"
        />
</GridLayout>